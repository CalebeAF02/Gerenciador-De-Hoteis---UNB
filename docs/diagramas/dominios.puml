@startuml DiagramaDominios

' Cabo Calebe, Tópicos de Programação I - UnB
' Diagrama de Classes UML para a Camada de Domínios (C++ Fiel)

' Configurações Visuais
skinparam classAttributeIconSize 0
skinparam defaultFontName Inter
skinparam linetype ortho
skinparam package {
    BorderColor #1E90FF
    BackgroundColor #F0F8FF
    FontColor #1E90FF
}
skinparam class {
    BackgroundColor #FFFFE0
    BorderColor #DAA520
}

package Dominios {

    ' Domínios baseados em String
    class Nome << dominio >> {
        - string nomeStr
        --
        + Nome()
        + Nome(const string &valor)
        + void setValor(const string &valor)
        + string getValor() const
        --
        - void validar(const string &valor)
    }

    class Email << dominio >> {
        - string emailStr
        --
        + Email()
        + Email(const string &valor)
        + void setValor(const string &valor)
        + string getValor() const
        --
        - void validar(const string &valor)
    }

    class Ramal << dominio >> {
        - string ramalStr
        --
        + Ramal()
        + Ramal(const string &valor)
        + void setValor(const string &valor)
        + string getValor() const
        --
        - void validar(const string &valor)
    }

    class Senha << dominio >> {
        - string senhaStr
        --
        + Senha()
        + Senha(const string &valor)
        + void setValor(const string &valor)
        + string getValor() const
        --
        - void validar(string valor)
    }

    class Endereco << dominio >> {
        - string enderecoStr
        --
        + Endereco()
        + Endereco(const string &valor)
        + void setValor(const string &valor)
        + string getValor() const
        --
        - void validar(string valor)
    }

    class Codigo << dominio >> {
        - string codigoStr
        --
        + Codigo()
        + Codigo(const string &valor)
        + void setValor(const string &valor)
        + string getValor() const
        --
        - void validar(string valor)
    }

    class Cartao << dominio >> {
        - string cartaoStr
        --
        + Cartao()
        + Cartao(const string &valor)
